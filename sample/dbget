require "bio/io/dbget"

include Bio

# DBGET command
com = $0.sub(".*/", '')			# e.g. $PATH/bget db entry
com = $*.shift if com == "dbget"	# e.g. $PATH/dbget bget db entry

# DBGET query strings
arg = $*.join(" ")

# DBGET result
print DBGET.dbget(com, arg)

